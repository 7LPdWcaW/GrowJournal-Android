<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
>
	<HorizontalScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/button_container"
		android:layout_alignParentBottom="true"
		android:background="#f0f0f0"
		android:scrollbarSize="2dp"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:showDividers="middle"
			android:divider="@drawable/menu_divider"
			android:dividerPadding="12dp"
		>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal"
			>
				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/bold"
					android:src="@drawable/ic_format_bold_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:foreground="?attr/selectableItemBackground"
					android:background="@drawable/select_deselect_button_drawable"
					android:contentDescription="Bold"
				/>

				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/underline"
					android:src="@drawable/ic_format_underlined_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Underline"
				/>

				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/italic"
					android:src="@drawable/ic_format_italic_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Italic"
				/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal"
			>
				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/link"
					android:src="@drawable/ic_insert_link_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Insert link"
				/>

				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/image"
					android:src="@drawable/ic_insert_photo_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Insert image"
				/>

				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/attach"
					android:src="@drawable/ic_attachment_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Attach"
				/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal"
			>
				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/heading"
					android:src="@drawable/ic_format_size_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Heading"
				/>

				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/bullet_list"
					android:src="@drawable/ic_format_list_bulleted_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Bullet list"
				/>

				<ImageButton
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/number_list"
					android:src="@drawable/ic_format_list_numbered_black_24dp"
					android:tint="#424242"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:background="?android:selectableItemBackground"
					android:contentDescription="Numbered list"
				/>
			</LinearLayout>
		</LinearLayout>
	</HorizontalScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/button_container"
		android:orientation="vertical"
	>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:paddingLeft="16dp"
		>
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/finish"
				android:src="@drawable/ic_arrow_back_black_24dp"
				android:layout_gravity="center_vertical"
				android:background="?android:selectableItemBackground"
			/>

			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/done"
				android:src="@drawable/ic_done_black_24dp"
				android:layout_gravity="center_vertical"
				android:layout_alignParentRight="true"
				android:background="?android:selectableItemBackground"
			/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/title"
				android:hint="Title"
				android:textStyle="normal"
				android:textColor="#000000"
				android:textColorHint="#616161"
				android:layout_marginLeft="32dp"
				android:lineSpacingMultiplier="1.0"
				android:singleLine="true"
				android:background="@null"
				android:layout_gravity="center_vertical"
				android:textSize="20dp"
				android:fontFamily="sans-serif-medium"
				android:inputType="textCapWords"
				android:layout_toLeftOf="@id/done"
				android:layout_toRightOf="@id/finish"
			/>
		</RelativeLayout>

		<com.commonsware.cwac.richedit.RichEditText
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/editor"
			android:gravity="left|top"
			android:imeOptions="flagNoExtractUi"
			android:background="@null"
			android:padding="18dp"
			android:textColor="#000000"
			android:textColorHint="#666666"
			android:fontFamily="sans-serif-light"
			android:hint="Begin your new post..."
		>
			<requestFocus />
		</com.commonsware.cwac.richedit.RichEditText>
	</LinearLayout>
</RelativeLayout>
