<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="me.anon.growjournal"
>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:label="@string/app_name"
		android:icon="@mipmap/ic_launcher"
		android:theme="@style/AppTheme"
		android:name=".MainApplication"
	>
		<receiver android:name=".receiver.GrowTrackerReceiver" android:exported="true" android:enabled="true">
			<intent-filter>
				<action android:name="me.anon.grow.ACTION_SAVE_PLANTS" />"
			</intent-filter>
		</receiver>

		<activity android:name=".activity.MainActivity" android:theme="@style/AppTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activity.ManagePostActivity" android:theme="@style/AppTheme.DarkStatus" android:windowSoftInputMode="adjustResize" />
		<activity android:name=".activity.SettingsActivity" android:theme="@style/AppTheme" android:windowSoftInputMode="adjustResize" />

		<meta-data android:name="me.anon.grow.ADDON_NAME" android:value="@string/app_name" />
		<meta-data android:name="me.anon.grow.ADDON_VERSION" android:value="${versionName}" />
	</application>
</manifest>
